<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo4.mapper.CarMapper">
    <select id="findAllCar" resultType="com.example.demo4.entity.Car">
        SELECT * FROM "car"
    </select>
    <insert id="insertCar" parameterType="com.example.demo4.entity.Car" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO "car" (name, fuel) VALUES (#{name}, #{fuel})
    </insert>

    <update id="updateCar" parameterType="com.example.demo4.entity.Car">
        UPDATE "car" SET name = #{name}, fuel = #{fuel} WHERE id = #{id}
    </update>

    <delete id="deleteCarr" parameterType="long">
        DELETE FROM "car" WHERE id = #{id}
    </delete>

</mapper>
